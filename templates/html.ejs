<!DOCTYPE html
        PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="zh" xml:lang="zh">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <title><%= title %></title>
        <style type="text/css">
            p { margin-top: 1em; text-indent: 0em; }
            h1 {margin-top: 1em}
            h2 {margin: 2em 0 1em; text-align: center; font-size: 2.5em;}
            h3 {margin: 0 0 2em; font-weight: normal; text-align:center; font-size: 1.5em; font-style: italic;}
            .center { text-align: center; }
            .pagebreak { page-break-before: always; }
        </style>
    </head>
    <body>
        <a name="toc"></a>
        <div id="toc">
            <h2>
                目录<br />
            </h2>
            <ul>
                <% chapters.forEach(function(chapter, index){ %>
                <li><a href="#ch<%= index+1 %>"><%= chapter.title %></a></li>
                <% }) %>
            </ul>
        </div>
        <div class="pagebreak"></div>
        <% chapters.forEach(function(chapter, index){ %>
        <a name="ch<%= index+1 %>"></a>
        <h3 id="ch<%= index+1 %>"><%= chapter.title %></h3>
        <%= chapter.content %>
        <mbp:pagebreak />
        <% }) %>
    </body>
</html>